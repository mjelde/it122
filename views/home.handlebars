<html lang="en">
<head>
    <!-- <meta> tags> -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <title>Home.Handlebars Page</title>
</head>

<body>
    <div class="container">
        <h1>Presentation Name and Speaker Details:</h1>
        <table>
            <tr>
                <td><b>Presentation Name</b></td>
                <td><b>Speaker</b></td>
                <td><b>Birth Date</b></td>
                <td><b>Birth Place</b></td>
            </tr>
        {{#each body}}
        <tr>
        <td><a href="./getdetail?name={{this.name}}">{{this.name}}</a></td>
        <td>{{this.speaker}}</td>    
        <td>{{this.birthDate}}</td>    
        <td>{{this.birthPlace}}</td>  
        </tr>
        {{/each}}
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>